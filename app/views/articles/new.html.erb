<div class="container">
  <%= form_with model: @article, url: articles_path, method: :post do |f| %>
    <div class="from__container">
      <%= f.label :title, 'タイトル', class: "form__text" %>
    </div>
      <%= f.text_field :title, class: "form__input" %>
    <div>
      <%= f.label :content, '内容', class: "form__text" %>
    </div>
    <div>
      <%= f.text_area :content, class: "form__textarea" %>
    </div>
      <%= f.submit '投稿', class: "btn btn-primary" %>
      <%= link_to '戻る', articles_path, class: "btn btn-secondary" %>
  <% end %>
</div>